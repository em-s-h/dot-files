colorscheme darkblue


" Options. {{{

" 1. Important
set nocp

" 2. Moving around, searching and patterns
set ic     
set scs    
set is     
set magic

" 4. Displaying text
set siso=5 
set ss=1   
set so=25  
set scr=15 

set rnu    
set lz     
set nu     
set nowrap 

" 5. Syntax, highlighting and spelling
set cc=95,100  
set tgc        
set cul        
set hls        

" 6. Multiple windows
set sb 
set spr

" 9. Using the mouse
set mouse=

" 10. Messages and info
set smd
set sc 

set cf 
set ru 
set more

" 11. Selecting text
set cb=unnamedplus

" 12. Editing text
set cot=menu,menuone,noinsert,noselect,preview 
set bs=indent,eol,start

set udf
set udir=$HOME/.local/state/vim/undo/

" 13. Tabs & indenting
set pi
set si 
set ai 

set et 
set cin

set sts=4  
set sw=4   
set ts=4   

" 14. Folding
set fdm=marker 
set fmr={{{,}}}
set fdc=1

set fdl=99
set fen
set fdls=99

" 18. The swap file
set ut=250

" 19. Command line editing
set wig=*.docx,*.jpg,*.png,*.gif,*.pdf,*.pyc,*.exe,*.flv,*.img,*.xlsx,*.svg

" 24. Various
set scl=yes
" }}}
