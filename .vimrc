" Options. {{{

" 1. Important.
set nocp " compatible

" 2. Moving around, searching and patterns.
set magic
set scs     " smart-case
set ic      " ignore-case
set is      " inc-search

" 4. Displaying text.
set siso=5 " side-scroll-of
set scr=15  " scroll
set so=25   " scroll-off
set ss=1    " side-scroll

set nowrap  " wrap
set rnu     " relative-number
set nu      " numer
set lz      " lazy-redraw

" 5. Syntax, highlighting and spelling.
set cul " cursor-line
set hls " hl-search

" 6. Multiple windows.
set spr " split-right
set sb  " split-below

" 11. Messages and info.
set more
set smd     " show-mode
set sc      " show-cmd
set ru      " ruler

" 13. Editing text.
set bs=indent,eol,start " backspace

" 14. Tabs & indenting.
set cin " c-indent
set si  " smart-indent
set ai  " auto-indent
set et  " expandtab

set sts=4   " soft-tab-stop
set sw=4    " shift-width
set ts=4    " tab-stop

" 15. Folding.
set fdm=marker  " fold-method
set fmr={{{,}}}

" 19. The swap file.
set ut=250 " update-time

" 25. Various.
set scl=yes " sign-column

" }}}
