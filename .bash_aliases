# yt-dlp aliases.
alias yt-mp4='yt-dlp -f mp4 -o'

# Python aliases.
alias python='python3'

# App aliases.
alias view='nvim -R -u ~/.config/nvim/view-init.lua'
alias vim='nvim -u ~/.config/nvim/vim-init.lua'

alias restore-trash='trash-restore'
alias empty-trash='trash-empty'
alias ls-trash='trash-list'

# ls aliases.
alias la='ls -lha'
alias l='ls -lh'

# Other aliases.
alias bg-fix='feh --bg-scale --randomize ~/media/wallpapers/*'
alias where='whereis'
alias echo='echo -e'
alias rm='rm -I'

alias c='clear'
alias q='exit'
alias x='exit'
